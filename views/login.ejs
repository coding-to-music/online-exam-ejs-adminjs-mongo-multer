<% layout('layouts/boilerplate')%>

<div class="container d-flex justify-content-center align-items-center mt-120 mb-60">
    <div class="row">
        <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
            <div class="card shadow">
                <img
                    src="https://media.licdn.cn/dms/image/C511BAQGYZheLJS2Peg/company-background_10000/0/1562311931319?e=2159024400&v=beta&t=1tea7tPdvcRhr7fAkfyFMwPMGMofVmS4F2NIMV_9TQk"
                    alt=""
                    class="card-img-top"
                />
                <div class="card-body">
                    <h5 class="card-title">Login</h5>
                    <form
                        action="/login"
                        method="POST"
                        class="validated-form"
                        novalidate
                    >
                        <div class="mb-3">
                            <label class="form-label" for="username"
                                >Username</label
                            >
                            <input
                                class="form-control"
                                type="text"
                                id="username"
                                name="username"
                                autofocus
                                required
                            />
                            <div class="valid-feedback">Looks good!</div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label" for="password"
                                >Password</label
                            >
                            <input
                                class="form-control"
                                type="password"
                                id="password"
                                name="password"
                                required
                            />
                            <div class="valid-feedback">Looks good!</div>
                        </div>
                        <button class="btn btn-success btn-block mt-8">Login</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>